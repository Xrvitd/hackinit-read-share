{% extends 'base.html.twig' %}

{% block title %}登陆{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-success" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label for="username">{{ 'yugu.user.username'|trans }}</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" />
        </div>

        <label for="password">{{ 'yugu.user.password'|trans }}</label>
        <input type="password" id="password" class="form-control" name="_password" />

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <br>
        <button type="submit" class="btn btn-default">登陆</button>
    </form>

{% endblock %}